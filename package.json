{
  "name": "hamonikr-community-mcp",
  "version": "1.0.0",
  "description": "MCP Server for HamoniKR Community Management - Supports login, post creation/editing/deletion, and comment management",
  "main": "dist/index.js",
  "bin": {
    "hamonikr-community-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "npm run start:http",
    "start:stdio": "node dist/index.js",
    "start:sse": "node dist/sse-server.js",
    "start:http": "node dist/http-server.js",
    "dev": "ts-node src/sse-server.ts",
    "dev:stdio": "ts-node src/index.ts",
    "test": "jest",
    "prepare": "npm run build",
    "postinstall": "playwright install chromium"
  },
  "keywords": [
    "mcp",
    "hamonikr",
    "community",
    "automation",
    "browser-automation"
  ],
  "author": "HamoniKR Community Management Tool",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "pg": "^8.16.3",
    "playwright": "^1.40.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "jest": "^29.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
